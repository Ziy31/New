<Page x:Class="LmrPlast.AddPages.CustomerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LmrPlast.AddPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomerPage">

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Maroon"/>
            <Setter Property="BorderBrush" Value="Maroon"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Times New Roman"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="Deliv_Btn" Grid.ColumnSpan="2" Grid.Row="1" Content="Заявки" Margin="10" Click="Deliv_Btn_Click"/>

        <Button x:Name="Driver_Btn" Grid.ColumnSpan="2" Grid.Row="2" Content="Водители" Margin="10" Click="Driver_Btn_Click"/>

        <Button x:Name="Car_Btn" Grid.ColumnSpan="2" Grid.Row="3" Content="Автомобили" Margin="10" Click="Car_Btn_Click"/>

        <Button x:Name="CustomerTb" Grid.ColumnSpan="2" Grid.Row="4" Content="Заказчики" Margin="10"/>

        <Button x:Name="ProductTb" Grid.ColumnSpan="2" Grid.Row="5" Content="Товары" Margin="10" Click="ProductTb_Click"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="6" VerticalAlignment="Top">
            <TextBlock Text="Поиск:" Width="175" TextAlignment="Right" VerticalAlignment="Center"/>
            <TextBox x:Name="SearchTb" Width="225" VerticalAlignment="Center" TextChanged="SearchTb_TextChanged" Margin="5 0 0 0"/>
        </StackPanel>


        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="2" VerticalAlignment="Bottom" Margin="0 0 0 5">
            <TextBlock Text="Сортировка" VerticalAlignment="Center" TextAlignment="Right"/>
            <TextBlock Text="по магазинам:" VerticalAlignment="Center" TextAlignment="Right"/>
        </StackPanel>
        <ComboBox x:Name="FiltCb" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="185" Margin="3 0 5 10" SelectionChanged="FiltCb_SelectionChanged" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2"/>

        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="5" VerticalAlignment="Bottom" Margin="0 0 0 5">
            <TextBlock Text="Сортировка" VerticalAlignment="Center" TextAlignment="Right"/>
            <TextBlock Text="по городам:" VerticalAlignment="Center" TextAlignment="Right"/>
        </StackPanel>
        <ComboBox x:Name="Filt_CityCb" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="185" Margin="3 0 5 10" SelectionChanged="Filt_CityCb_SelectionChanged" Grid.Row="1" Grid.Column="6" Grid.ColumnSpan="2"/>
        
        <ScrollViewer Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="6" Grid.RowSpan="6"
             VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">

            <ItemsControl ItemsSource="{Binding FilteredCustomers}" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="6" Grid.RowSpan="6">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5" BorderThickness="1.5" BorderBrush="Gray">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="{Binding Title}" FontSize="20"/>
                                <TextBlock Text="{Binding City.CityName, StringFormat={}}" Grid.Row="1"/>
                                <TextBlock Text="{Binding Address}" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
    </Grid>
</Page>
