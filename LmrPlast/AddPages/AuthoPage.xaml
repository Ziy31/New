<Page x:Class="LmrPlast.AddPages.AuthoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LmrPlast.AddPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthoPage" FontFamily="Times New Roman">

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Maroon"/>
            <Setter Property="BorderBrush" Value="Maroon"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Times New Roman"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#af1212"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <Style  TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#af1212"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>

        <Style  TargetType="PasswordBox">
            <Setter Property="BorderBrush" Value="#af1212"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>

    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Grid.Column="1" Grid.ColumnSpan="6" Grid.RowSpan="3" Source="/Images/logo.png"/>

        <TextBlock Grid.Row="4" Grid.Column="2" Text="Логин:"/>

        <TextBox x:Name="logTb" Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="2" Height="20" VerticalAlignment="Top" Margin="5 3 0 0"/>

        <TextBlock Grid.Row="5" Grid.Column="2" Text="Пароль:"/>

        <PasswordBox x:Name="passTb" Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="2" Height="20" VerticalAlignment="Top" Margin="5 3 0 0"/>

        <Button x:Name="AuthoBtn" Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="3" Content="Войти" VerticalAlignment="Center" Width="200"/>

    </Grid>
</Page>
